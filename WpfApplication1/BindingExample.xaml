<Window x:Class="BindingExample"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="BindingExample" Height="300" Width="300" Loaded="Window_Loaded" DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid>
        <Label HorizontalAlignment="Left" Margin="39,33,0,0" VerticalAlignment="Top" Content="{Binding Vindaloo}"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="39,91,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>

    </Grid>
</Window>
